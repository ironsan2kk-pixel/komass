# ============================================
# Komas Trading Server - Configuration
# ============================================
# Copy this file to .env and customize values
# All settings have sensible defaults

# ============ ENVIRONMENT ============
KOMAS_ENVIRONMENT=development
# Options: development, production, testing

# ============ SERVER ============
KOMAS_HOST=0.0.0.0
KOMAS_PORT=8000
KOMAS_DEBUG=false
KOMAS_RELOAD=true
KOMAS_WORKERS=1

# ============ DATABASE ============
KOMAS_DB_PATH=data/komas.db
KOMAS_DB_ECHO=false

# ============ LOGGING ============
KOMAS_LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

KOMAS_LOG_FORMAT=text
# Options: text, json

KOMAS_LOG_CONSOLE_COLORS=true
KOMAS_LOG_FILE_ENABLED=true
KOMAS_LOG_RETENTION_DAYS=30

# ============ TRADING DEFAULTS ============
KOMAS_TRADING_DEFAULT_SYMBOL=BTCUSDT
KOMAS_TRADING_DEFAULT_TIMEFRAME=1h

# TRG Indicator
KOMAS_TRADING_TRG_ATR_LENGTH=45
KOMAS_TRADING_TRG_MULTIPLIER=4.0

# Take Profits
KOMAS_TRADING_TP_COUNT=4
KOMAS_TRADING_TP1_PERCENT=1.05
KOMAS_TRADING_TP1_AMOUNT=50
KOMAS_TRADING_TP2_PERCENT=1.95
KOMAS_TRADING_TP2_AMOUNT=30
KOMAS_TRADING_TP3_PERCENT=3.75
KOMAS_TRADING_TP3_AMOUNT=15
KOMAS_TRADING_TP4_PERCENT=6.0
KOMAS_TRADING_TP4_AMOUNT=5

# Stop Loss
KOMAS_TRADING_SL_PERCENT=3.0
KOMAS_TRADING_SL_MODE=fixed
# Options: fixed, breakeven, cascade

# Risk Management
KOMAS_TRADING_LEVERAGE=10
KOMAS_TRADING_COMMISSION_ENABLED=true
KOMAS_TRADING_COMMISSION_PERCENT=0.04

# ============ OPTIMIZATION ============
# Leave empty for auto (CPU count - 1)
KOMAS_OPT_MAX_WORKERS=
KOMAS_OPT_CHUNK_SIZE=10
KOMAS_OPT_TIMEOUT_SECONDS=300

# Indicator optimization ranges
KOMAS_OPT_I1_MIN=20
KOMAS_OPT_I1_MAX=80
KOMAS_OPT_I1_STEP=5
KOMAS_OPT_I2_MIN=2.0
KOMAS_OPT_I2_MAX=8.0
KOMAS_OPT_I2_STEP=0.5

# Genetic algorithm
KOMAS_OPT_GA_POPULATION=50
KOMAS_OPT_GA_GENERATIONS=20
KOMAS_OPT_GA_MUTATION_RATE=0.2

# ============ NOTIFICATIONS ============

# Telegram
KOMAS_TELEGRAM_ENABLED=false
KOMAS_TELEGRAM_BOT_TOKEN=
KOMAS_TELEGRAM_CHAT_ID=

# Discord (future)
KOMAS_DISCORD_ENABLED=false
KOMAS_DISCORD_WEBHOOK_URL=

# Notification events
KOMAS_NOTIFY_ON_SIGNAL=true
KOMAS_NOTIFY_ON_TP=true
KOMAS_NOTIFY_ON_SL=true
KOMAS_NOTIFY_ON_ERROR=true

# ============ EXCHANGE API ============
# Primary exchange
KOMAS_EXCHANGE=binance
# Options: binance, bybit, okx

# Binance
KOMAS_BINANCE_API_KEY=
KOMAS_BINANCE_API_SECRET=
KOMAS_BINANCE_TESTNET=true

# Bybit
KOMAS_BYBIT_API_KEY=
KOMAS_BYBIT_API_SECRET=
KOMAS_BYBIT_TESTNET=true

# OKX
KOMAS_OKX_API_KEY=
KOMAS_OKX_API_SECRET=
KOMAS_OKX_PASSPHRASE=
KOMAS_OKX_TESTNET=true
